# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0
